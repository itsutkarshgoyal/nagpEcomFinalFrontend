{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "target": "es2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": ["estree"]
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictDomEventTypes": false,
    "enableI18nLegacyMessageIdFormat": false
  }
}
